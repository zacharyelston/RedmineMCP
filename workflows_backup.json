{
  "workflows": [
    {
      "name": "Start application on port 5001",
      "tasks": [
        {
          "task": "packager.installForAll"
        },
        {
          "task": "shell.exec",
          "args": "gunicorn --bind 0.0.0.0:5001 --reuse-port --reload main:app",
          "waitForPort": 5001
        }
      ]
    }
  ]
}