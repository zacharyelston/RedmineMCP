{
  "config_version": 1,
  "mcps": {
    "redmine": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "REDMINE_API_KEY",
        "-e",
        "REDMINE_URL",
        "-e",
        "LLM_PROVIDER",
        "-e",
        "RATE_LIMIT",
        "redmine-mcp-extension:latest"
      ],
      "environment": {
        "REDMINE_API_KEY": "your-redmine-api-key",
        "REDMINE_URL": "https://your-redmine-instance.com",
        "LLM_PROVIDER": "claude",
        "RATE_LIMIT": "30"
      },
      "description": "Redmine issue management with Claude AI integration",
      "capabilities": {
        "methods": [
          "initialize",
          "capabilities",
          "health",
          "llm/create_issue",
          "llm/update_issue",
          "llm/analyze_issue"
        ]
      }
    }
  }
}