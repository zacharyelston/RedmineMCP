# Redmine MCP Extension - Credentials Template
# Copy this file to credentials.yaml and fill in your actual credentials
# DO NOT commit credentials.yaml to version control!

# Redmine API configuration
redmine:
  url: "https://your-redmine-instance.example.com"
  api_key: "your_redmine_api_key_here"

# OpenAI API configuration
openai:
  api_key: "your_openai_api_key_here"
  
# Database configuration (optional - can use environment variables instead)
database:
  url: "postgresql://username:password@localhost:5432/redmine_mcp"

# Rate limiting settings
rate_limits:
  redmine_per_minute: 60
  openai_per_minute: 20