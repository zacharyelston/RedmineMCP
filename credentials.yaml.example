# Redmine Integration Configuration
# Copy this file to credentials.yaml and update with your values

# The URL of your Redmine instance (e.g., https://redmine.example.com)
redmine_url: "https://redmine.example.com"

# Your Redmine API key (found in My Account > API key)
redmine_api_key: "your_redmine_api_key_here"

# Your OpenAI API key
openai_api_key: "your_openai_api_key_here"

# Rate limit for API calls (requests per minute)
rate_limit_per_minute: 60

# Note: The application will load credentials in this flat format,
# but also supports the following nested format for backward compatibility:
#
# redmine:
#   url: "https://redmine.example.com"
#   api_key: "your_redmine_api_key_here"
# 
# openai:
#   api_key: "your_openai_api_key_here"
# 
# rate_limits:
#   redmine_per_minute: 60
#   openai_per_minute: 20